@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using DomainModels.DB
@inject HttpClient _httpClient

@page "/Reservations/Post"
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<h3>MakeReservation</h3>
<h1>Helllllloooooo</h1>


@code {
    Reservation reservation = new Reservation();

    string roomType;
    int price;

   
    public async Task PostReservationToDB()
    {
        await _httpClient.PostAsJsonAsync<Reservation>($"https://localhost:7207/Reservations", reservation);
       
    }
    
}



<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudCard Outlined="true">
        <MudCardContent>
            <MudDatePicker @bind-Value="reservation.CheckIn" Label="Check in date" HelperText="Check in date" Variant="Variant.Outlined" />
            <MudDatePicker @bind-Value="reservation.CheckOut" Label="Check out date" HelperText="Check out date" Variant="Variant.Outlined" />
        </MudCardContent>
        <MudCardContent>
            <MudSelect T="string" Label="Room type" @bind-Value="roomType">
                <MudSelectItem T="string" Value="@("standart single")">standard single</MudSelectItem>
                <MudSelectItem T="string" Value="@("standart double")">standard double</MudSelectItem>
                <MudSelectItem T="string" Value="@("premium single")">standard single</MudSelectItem>
                <MudSelectItem T="string" Value="@("premium double")">standard single</MudSelectItem>
                <MudSelectItem T="string" Value="@("penthouse")">standard single</MudSelectItem>
            </MudSelect>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="() => PostReservationToDB()">Save changes</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

